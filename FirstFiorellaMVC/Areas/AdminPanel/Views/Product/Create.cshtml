@model Product
@{
    ViewData["Title"] = "Create";
}
<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-8 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Add Blog</h4>
                    <p class="card-description">Please fill below</p>
                    <form class="forms-sample" method="post">
                        @*!!!*@
                        <div class="form-group">
                            <input class="form-control" id="exampleInputUsername1" placeholder="name" asp-for="Name">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input class="form-control" id="exampleInputUsername1" placeholder="Dimension" asp-for="Dimension">
                            <span asp-validation-for="Dimension" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input class="form-control" id="exampleInputUsername1" placeholder="Weight" asp-for="Weight">
                            <span asp-validation-for="Weight" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input class="form-control" id="exampleInputUsername1" placeholder="SKUCode" asp-for="SKUCode">
                            <span asp-validation-for="SKUCode" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input class="form-control" id="exampleInputUsername1" placeholder="Price" asp-for="Price">
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            @*category dropdown list*@
                            <label for="exampleFormControlSelect3">Category</label>
                            <select class="form-control form-control-sm selected-category-name" id="exampleFormControlSelect3" asp-for="CategoryId">
                                @await Component.InvokeAsync("Category")
                            </select>
                            <span asp-validation-for="CategoryId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            @*Campaign dropdown list*@
                            <label for="exampleFormControlSelect3">Campaign</label>
                            <select class="form-control form-control-sm selected-campaign-name" id="exampleFormControlSelect3" asp-for="CampaignId">
                                <option></option>
                                @await Component.InvokeAsync("Campaign")
                            </select>
                            <span asp-validation-for="CampaignId" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary me-2">Submit</button>
                        <a class="btn btn-light" asp-action="Index">Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts{
    <partial name="_ValidationPartial" />
}