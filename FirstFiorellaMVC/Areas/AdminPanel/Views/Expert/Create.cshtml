@model Expert
@{
    ViewData["Title"] = "Create";
}
<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-8 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Add Expert</h4>
                    <p class="card-description">Please fill below</p>
                    <form class="forms-sample" method="post" enctype="multipart/form-data">
                        @*!!!*@
                        <div class="form-group">
                            <input class="form-control" placeholder="name" asp-for="Name">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input class="form-control" placeholder="Photo" asp-for="Photo" accept="image/*">
                            <span asp-validation-for="Photo" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            @*category dropdown list*@
                            <label>Positions</label>
                            <select class="form-control form-control-sm selected-category-name" asp-for="PositionId">
                                <option></option>
                                @await Component.InvokeAsync("Position")
                            </select>
                            <span asp-validation-for="PositionId" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary me-2">Submit</button>
                        <a class="btn btn-light" asp-action="Index">Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts{
    <partial name="_ValidationPartial" />
}

